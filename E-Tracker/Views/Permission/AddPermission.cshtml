@model E_Tracker.CreateDto.CreatePermissionDto

@{
    ViewData["Title"] = "New Permission";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create Permission</h1>
                    </div>
                    <form class="user" asp-controller="Permission" asp-action="AddPermission" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="Name" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Create Permission
                        </button>
                        <hr>
                        <button type="reset" class="btn btn-danger btn-user btn-block">
                            Reset
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>